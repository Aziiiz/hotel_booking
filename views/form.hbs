  <body>

    <form action="/forms" method="post">

      <h1>Questions</h1>

      <fieldset id="rates">
        <legend><span class="number">1</span>Hotels</legend>
        <label for="text">1 Question: Where do you want to stay?</label>
        <input type="radio" id="r1" value="under" name="rates"><label for="under_13" class="light">Heundae </label><br>
        <input type="radio" id="r2" value="under" name="rates"><label for="under_13" class="light">Gwangali </label><br>
        <input type="radio" id="r3" value="under" name="rates"><label for="under_13" class="light">Seomyeon </label><br>

        <label for="text">2 Question: How many people with you?</label>
        <input type="radio" id="under_13" value="under_13" name="user_age"><label for="under_13" class="light">1 </label><br>
        <input type="radio" id="under_13" value="under_13" name="user_age"><label for="under_13" class="light">2 </label><br>
        <input type="radio" id="under_13" value="under_13" name="user_age"><label for="under_13" class="light">more than 2 </label><br>
