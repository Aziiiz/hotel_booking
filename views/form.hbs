        <input type="radio" id="under_13" value="under_13" name="user_age"><label for="under_13" class="light">cheap </label><br>

        <input type="radio" id="under_13" value="under_13" name="user_age"><label for="under_13" class="light"> expensive</label><br>



        <fieldset>
        <legend><span class="number">2</span>Restaurants</legend>
        <label for="text">1 Question: What kind of food do you like?</label>
        <input type="radio" id="under_13" value="under_13" name="user_age"><label for="under_13" class="light">National food</label><br>
        <input type="radio" id="under_13" value="under_13" name="user_age"><label for="under_13" class="light">Junk food</label><br>
        <input type="radio" id="under_13" value="under_13" name="user_age"><label for="under_13" class="light">Sea food </label><br>
        <label for="text">2 Question: Should it be near or far from your hotel?</label>
        <input type="radio" id="under_13" value="under_13" name="user_age"><label for="under_13" class="light">yes </label><br>
        <input type="radio" id="under_13" value="under_13" name="user_age"><label for="under_13" class="light">no</label><br>

        <label for="text">3 Question:What should be the price of foods</label>
        <input type="radio" id="under_13" value="under_13" name="user_age"><label for="under_13" class="light">cheap</label><br>
        <input type="radio" id="under_13" value="under_13" name="user_age"><label for="under_13" class="light">expensive </label><br>



      <button type="submit" href="/form"<a class="formAction" >Sign Up</a></button>
    </form>

